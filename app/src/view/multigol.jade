doctype html
html(lang="en")
  head
    link(rel='stylesheet', href='css/multigol.css', type='text/css')
    script(src='/socket.io/socket.io.js')
    script(src='https://cdn.socket.io/socket.io-1.2.0.js')
    script(src='http://code.jquery.com/jquery-1.11.1.js')
    meta(http-equiv="content-type", charset="UTF-8")
  body
    canvas(id="gol_canvas_grid", style="position: absolute; top: 0; left: 0; z-index: -2")
    canvas(id="gol_canvas", style="position: absolute; top: 0; left: 0; z-index: -1") 
    canvas(id="gol_canvas_draw", style="position: absolute; top: 0; left: 0; z-index: 0; display: none")
    #pattern-field-block
    include goldata.jade
    include cmds.jade
    #multigol-clients.multigol-sidepane
    #gol-library.multigol-sidepane
      each lib, i in library
        a(href="#", class="gollib-pattern-link", id="pattern_link_id_#{lib.id}", 
          onfocus="if (this.blur) this.blur()", 
          onclick="getGolLibPattern('pattern_id_#{lib.id}', 'pattern_link_id_#{lib.id}')", 
          onmouseover="displayPatternDescrition('#{lib.hashid}#{lib.id}')", 
          onmouseout="displayPatternDescrition('#{lib.hashid}#{lib.id}')") #{lib.name}
        span(id="pattern_id_#{lib.id}", hidden=true) #{lib.code}
        br
        div(id="#{lib.hashid}#{lib.id}", class="gol-pattern-description", style="display: none;") #{lib.desc}
    include enterdialog.jade

script(src='js/dto/multigol.hashtable.js')
script(src='js/dto/multigol.hashstring.js')
script(src='js/dto/multigol.client.js')
