script(src='js/cside/multigol.lib.js')
script(src='js/cside/utils/multigol.mouse.utils.js')
script(src='js/cside/multigol.pattern.utils.js')
script(src='js/cside/multigol.pattern.draw.js')
script(src='js/cside/multigol.events.js')
